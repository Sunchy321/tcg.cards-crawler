{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2024",
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "lib": ["ES2024"],
        "baseUrl": ".",
        "paths": {
            "*": ["@types/*"],
            "@interface/*": ["node_modules/card-interface/src/*"],
        },
    },
    "include": [
        "./**/*"
    ]
}
